for i in "$@"
do
case $i in
    --deploy)
    DEPLOY=YES
    shift # past argument with no value
    ;;
    *)
            # unknown option
    ;;
esac
done

git config --global push.default tracking
if [[ -d .tmp ]]; then
  ./force-fetch.sh .tmp
else
  git clone https://github.com/Charcoal-SE/charcoal-jekyll-theme .tmp
fi
cp -r .tmp/* ./
if [[ $DEPLOY ]]; then
  bundle install --deployment
else
  bundle install
fi
